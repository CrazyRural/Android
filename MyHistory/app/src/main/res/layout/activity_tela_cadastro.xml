<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.araujodev.myhistory.TelaCadastro"
    android:id="@+id/T"
    android:background="#0297ca">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ou preencha o formulÃ¡rio:"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_below="@+id/gButton"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailEdit"
        android:textColor="#ffffff"
        android:hint="Email"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/nomeEdit"
        android:layout_centerVertical="true"
        android:textColorHint="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/senhaEdit"
        android:textColor="#ffffff"
        android:hint="Senha"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/emailEdit"
        android:textColorHint="#ffffff" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomeEdit"
        android:textColor="#ffffff"
        android:hint="Nome"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:textColorHint="#ffffff" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/cadastrarButton"
        android:textColor="#ffffff"
        android:background="@android:drawable/toast_frame"
        android:backgroundTint="#015c79"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpar"
        android:id="@+id/limparButton"
        android:textColor="#ffffff"
        android:background="@android:drawable/toast_frame"
        android:backgroundTint="#015c79"
        android:layout_alignTop="@+id/cadastrarButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/cadastrarButton" />



    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:id="@+id/imageView4"
        android:background="@drawable/abc_ic_menu_selectall_mtrl_alpha"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fButton"
        android:background="@drawable/fo"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/gButton"
        android:layout_toEndOf="@+id/gButton"
        android:layout_marginLeft="72dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Google+ ou Facebook "
        android:id="@+id/textView14"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:id="@+id/gButton"
        android:background="@drawable/foto"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="72dp"/>

</RelativeLayout>
