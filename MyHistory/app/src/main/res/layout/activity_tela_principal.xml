<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.araujodev.myhistory.TelaPrincipal"
    android:background="#149fce"
    android:id="@+id/Y">

    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:id="@+id/imageView3"
        android:background="@drawable/abc_ic_menu_selectall_mtrl_alpha"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:id="@+id/adicionarButton"
        android:textColor="#ffffff"
        android:background="@drawable/soma"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/gerenciarbutton"
        android:layout_alignEnd="@+id/gerenciarbutton" />

    <Button
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:id="@+id/loginButton"
        android:textColor="#ffffff"
        android:background="@drawable/login"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/infoButton"
        android:background="@android:drawable/ic_dialog_info"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/gerenciarbutton"
        android:layout_alignEnd="@+id/gerenciarbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerenciar  visitas"
        android:id="@+id/gerenciarbutton"
        android:textColor="#ffffff"
        android:background="@android:drawable/toast_frame"
        android:backgroundTint="#015c79"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gerencie eventos como:
      Exames, Consultas e Vacinas"
        android:id="@+id/textView8"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />


</RelativeLayout>
