<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.araujodev.myhistory.TelaReceituario">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vacinadoEdit"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#ffffff"
        android:layout_alignLeft="@+id/medicadoEdit"
        android:layout_alignStart="@+id/medicadoEdit" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medicadoEdit"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/vacinadoEdit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#ffffff"
        android:layout_toRightOf="@+id/medicamentocheckBox"
        android:layout_toEndOf="@+id/medicamentocheckBox" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exameEdit"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/medicadoEdit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#ffffff"
        android:layout_alignLeft="@+id/novaConsultaEdit"
        android:layout_alignStart="@+id/novaConsultaEdit" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/novaConsultaEdit"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/exameEdit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#ffffff"
        android:paddingTop="20dp"
        android:layout_alignLeft="@+id/medicadoEdit"
        android:layout_alignStart="@+id/medicadoEdit" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vacina"
        android:id="@+id/vacinacheckBox"
        android:checked="false"
        android:textColor="#ffffff"
        android:layout_above="@+id/medicadoEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/vacinadoEdit"
        android:layout_toStartOf="@+id/vacinadoEdit" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RemÃ©dio"
        android:id="@+id/medicamentocheckBox"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/medicadoEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exames"
        android:id="@+id/examecheckBox"
        android:checked="false"
        android:textColor="#ffffff"
        android:layout_above="@+id/novaConsultaEdit"
        android:layout_toLeftOf="@+id/exameEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visita"
        android:id="@+id/consultacheckBox"
        android:checked="false"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/novaConsultaEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/examecheckBox"
        android:layout_alignEnd="@+id/examecheckBox" />

</RelativeLayout>
