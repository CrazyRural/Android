<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.araujodev.myhistory.TelaInfo"
    android:background="#149fce">

    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:id="@+id/imageView5"
        android:background="@drawable/abc_ic_menu_selectall_mtrl_alpha"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gerencie e controle todos os suas visitas, que são divididos em:"
        android:id="@+id/textView8"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Também é possível salvar todos suas vistas online(BREVE), caso possua mais de um aparelho ou troque o."
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Podendo fazer o login via app, Google+ ou Facebook, ou criar uma conta se não possui.(BREVE)"
        android:id="@+id/textView10"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+Exames, Diagnósticos"
        android:id="@+id/textView11"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+Consultas, Adoecimento"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+Vacinas, Doação"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
